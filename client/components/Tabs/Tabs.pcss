.list {
  @apply list-reset flex border-b;
}

.tab-item {
  @apply mr-1;
}

.tab-link {
  border-bottom: 1px solid white;
  margin-bottom: -1px;
  @apply bg-white inline-block py-2 px-4 text-black font-semibold no-underline text-lg;

  &:hover {
    @apply text-blue-dark;
  }

  &.active {
    @apply bg-white inline-block border-l border-t border-r rounded-t py-2 px-4 text-blue-dark font-semibold;
  }

  &.disabled {
    @apply pointer-events-none text-grey;
  }
}
